    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const enviarPedidoButton = document.getElementById("enviar-pedido-button");
            enviarPedidoButton.addEventListener("click", function(event) {
                event.preventDefault(); // Evita que el enlace siga su URL.

                let pedidos =[];
                const lista = {{{ json listaDePedidos }}};
                pedidos = Array.isArray(lista) ? lista : [];


                const list = pedidos;
                // Agrega los pedidos como un campo oculto en el formulario
                const pedidoInput = document.createElement("input");
                pedidoInput.type = "hidden";
                pedidoInput.name = "lista";
                pedidoInput.value = JSON.stringify(list);

                const pedidoForm = document.getElementById("pedido-form");
                pedidoForm.appendChild(pedidoInput);

                // Envía el formulario
                pedidoForm.submit();
            });
        });
    </script>



